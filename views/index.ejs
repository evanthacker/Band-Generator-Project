<!-- Step 3 Add Header -->

<%- include("partials/header.ejs") %>


<!-- Step 2 - If an adjective and noun are sent to this ejs file, 
    Change the h1 to show the adjective and noun.
    But when the user first goes on the website and there is no adjective and noun, 
    Show the default h1 below -->

    <% if (locals.adjective && locals.noun) { %>
      <h1>
        <%= adjective %>
        <%= noun %>
      </h1>
      <form action="/submit" method="POST">
        <input type="submit" value="Click To Generate Another Name For Your Band">
      </form>
      <% } else { %>
        <h1> Welcome To The Band Name Generator! </h1>
        <form action="/submit" method="POST">
          <input type="submit" value="Click To Generate Your Band Name">
        </form>
    <% } %>


